<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="eBus.Mobile.View.NovostiDetaljiPage">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="{Binding Novost.Naslov}"
                   FontSize="Header"
                HorizontalOptions="CenterAndExpand" />
            <Label  Text="{Binding Novost.Sadrzaj}" Margin="15"
                   FontSize="Medium"></Label>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>